# Production Environment Configuration Template
# Copy this file to .env.production and update the values for your production environment

# Database Configuration
DB_USER=your_production_db_user
DB_HOST=your_production_db_host
DB_NAME=your_production_db_name
DB_PASSWORD=your_secure_production_password
DB_PORT=5432

# Authentication
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_secret
JWT_SECRET=your_very_secure_jwt_secret_minimum_32_characters

# Server Configuration
PORT=5050
NODE_ENV=production
BASE_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api/details
AUTH_BASE_URL=https://yourdomain.com/auth
IMAGE_BASE_URL=https://yourdomain.com/api/images
IMAGE_SERVE_URL=https://yourdomain.com/api/images/serve
FRONTEND_URL=https://yourdomain.com

# Default URLs
DEFAULT_AVATAR_URL=https://static8.depositphotos.com/1009634/988/v/950/depositphotos_9883921-stock-illustration-no-user-profile-picture.jpg
FACEBOOK_GRAPH_URL=https://graph.facebook.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIR=uploads
IMAGE_QUALITY_LARGE=85
IMAGE_QUALITY_MEDIUM=80
IMAGE_QUALITY_THUMBNAIL=75
